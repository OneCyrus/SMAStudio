<Window x:Class="SMAStudio.NewRunbookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Runbook" Height="142" Width="361">
    
    <GroupBox Margin="3,3,3,3" Header="Runbook">
        <StackPanel Orientation="Vertical">
            <Label Content="Enter a name for the runbook" />
            <TextBox x:Name="txtRunbookName" />
            <Button x:Name="btnSave" Content="Save" Width="70" HorizontalAlignment="Right" Margin="0,5,0,0" Click="btnSave_Click" />
        </StackPanel>
    </GroupBox>
</Window>
